<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.GUIController.ListTaksControllerGUI"
            prefHeight="400.0" prefWidth="400.0">

    <VBox alignment="CENTER" spacing="10">
            <Label text="Start Date (DD-MM-YYYY):"/>
            <TextField fx:id="startDateField" />
            <Label text="End Date (DD-MM-YYYY):"/>
            <TextField fx:id="endDateField"/>
            <Label text="Task Status:"/>
            <ComboBox fx:id="statusComboBox"/>
            <Button text="List Tasks" onAction="#handleListTasks"/>
        <TextArea fx:id="taskListArea" prefWidth="400.0" prefHeight="300.0"/>
    </VBox>

</AnchorPane>
