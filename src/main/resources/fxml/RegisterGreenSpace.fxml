<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="pt.ipp.isep.dei.esoft.project.ui.javafx.RegisterGreenSpaceController" spacing="10" padding="20">
    <Label text="Register Green Space" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label text="Name:"/>
    <TextField fx:id="nameField"/>
    <Label text="Area (square meters):"/>
    <TextField fx:id="areaField"/>
    <Label text="Type of Green Space:"/>
    <ComboBox fx:id="typeComboBox">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Garden"/>
                <String fx:value="Medium-Sized Park"/>
                <String fx:value="Large-Sized Park"/>
            </FXCollections>
        </items>
    </ComboBox>
    <Button text="Register" onAction="#handleRegister"/>
</VBox>
