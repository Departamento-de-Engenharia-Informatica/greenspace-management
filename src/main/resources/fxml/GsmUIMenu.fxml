<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.GUIController.GsmUIMenuControllerGUI" spacing="10" style="-fx-background-color: #FFFFFF; -fx-padding: 20; -fx-alignment: center;">
    <Label fx:id="emailLabel" text="Welcome!" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Button text="Register Green Space" onAction="#handleRegisterGreenSpace" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
    <Button text="List Green Spaces" onAction="#handleListGreenSpaces" style="-fx-background-color: #008CBA; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
    <Button text="To-Do List" onAction="#handleToDoList" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
    <Button text="Agenda" onAction="#handleAgenda" style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
    <Button text="List Agenda Entries" onAction="#handleListAgendaEntries" style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
    <Button text="Change Agenda Status" onAction="#handleChangeAgendaStatus" style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
    <Button text="Assign Vehicle" onAction="#handleAssignVehicle" style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
    <Button text="Assign Team" onAction="#handleAssignTeam" style="-fx-background-color: #795548; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
</VBox>
